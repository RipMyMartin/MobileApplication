<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.TripsTrapsTrull"
             Title="TripsTrapsTrull ?Martin?">
    <StackLayout Padding="10" Spacing="10">
        <Grid x:Name="BoardGrid" 
          HorizontalOptions="FillAndExpand" 
          VerticalOptions="FillAndExpand" 
          BackgroundColor="LightGray" />

        <Button Text="Change board size" 
            Clicked="OnChangeBoardSizeClicked" />

        <Button Text="Change symbol" 
            Clicked="OnChangeSymbolsClicked" />
        
        <Button Text="Change color" 
            Clicked="OnChangeColorClicked" />
        
        <Button Text="New game" 
            Clicked="NewGameClicked" />
    </StackLayout>
</ContentPage>
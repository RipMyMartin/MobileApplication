<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.FrendsContact"
             Title="FrendsContact"
             
             >
    <VerticalStackLayout>
        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Nimi"></Label>
        
        <Entry x:Name="entryName" Placeholder="Enter nimi"></Entry>

        <Label Text="Kontaktandmed"></Label>
            
        <Entry x:Name="entryPhone" Placeholder="Enrty Phone" />

        <Entry x:Name="entryEmail" Placeholder="Entry Email"  />

        
        <Button Text="Send SMS" 
            Clicked="SendSMS_Clicked" />

        <Button Text="Send Email"
            Clicked="SendEmail_Clicked"/>
    </VerticalStackLayout>
</ContentPage>